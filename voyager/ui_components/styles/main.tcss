Screen {
    background: #0b1221;
}

#app-header {
    background: #1f2f6b;
    color: white;
}

#main {
    height: 1fr;
    padding: 0 1;
}

TabbedContent, TabPane {
    height: 1fr;
}

.columns {
    height: 1fr;
    padding: 0 1;
}

.left-panel, .right-panel {
    background: transparent;
}

.left-panel {
    width: 60%;
}

.right-panel {
    width: 40%;
    height: 1fr;
    layout: vertical;
}

.box {
    background: transparent;
    padding: 0 1;
}

.query-box {
    height: 15;
    border: solid yellow;
    width: 100%;
    text-wrap: wrap;
}

.vars-box, .headers-box {
    height: 5;
    border: solid yellow;
    width: 100%;
    text-wrap: wrap;
}

.body-box {
    height: 8;
    border: solid yellow;
    width: 100%;
    text-wrap: wrap;
}

.response-box {
    height: 1fr;
    min-height: 0;
    padding: 0 1;
    scrollbar-size-vertical: 1;
    scrollbar-color: #4f8dff;
    scrollbar-background: #0b1221;
    border: solid yellow;
}

.status {
    color: #87d7ff;
    padding: 0 1;
}

.label {
    color: #8fb2ff;
}

.actions SmallButton {
    margin-right: 1;
}

.actions {
    align: center middle;
}

.endpoint-input {
    width: 100%;
    min-width: 100%;
    max-width: 100%;
    background: #0b1529;
    color: #e5edff;
    border: solid yellow;
}

.endpoint-input:focus {
    border: solid yellow;
}

Checkbox {
    padding: 0;
    background: transparent;
    border: none;
}

Checkbox .toggle--button {
    width: 2;
    height: 2;
    min-width: 2;
    min-height: 2;
    border: solid yellow;
    background: #162540;
}

Checkbox.-checked .toggle--button {
    background: #4a7dff;
    color: #0b1221;
    border: solid yellow;
}

Checkbox:hover .toggle--button {
    border: solid yellow;
}

Checkbox .toggle--label {
    padding-left: 1;
}

.docs-columns {
    height: 1fr;
}

.docs-display {
    padding: 0 1;
    layout: vertical;
    height: 1fr;
    border: solid yellow;
}

.docs-tree {
    height: 1fr;
    min-height: 0;
    scrollbar-size-vertical: 1;
    border: solid yellow;
}

.docs-display .response-box {
    height: 1fr;
    min-height: 0;
}

.method-row {
    width: 100%;
    align: center middle;
}

.method-select {
    width: 12;
    min-width: 10;
    margin-right: 1;
}
